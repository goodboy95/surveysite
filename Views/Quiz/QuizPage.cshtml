<link rel="stylesheet" href="~/css/quiz.css" />
<script src="~/js/quiz.js"></script>
<div hidden>
    <input type="radio" id="optAnswer" name="answer" value="" title="">
    <input id="quizID" value="@(ViewBag.quizID)" hidden>
</div>

<div>
    <div id="intro" hidden>
        <div id="titleBlock">
            @ViewBag.Title
        </div>
        <div id="contextBlock">
            <p>@ViewBag.Intro</p>
        </div>
        <div id="picBlock">
            <img src="@(ViewBag.PicPath)" />
        </div>
        <button class="layui-btn" id="startQuiz">Start</button>
    </div>
    <label class="layui-form-label ques-title" style="width:auto">Question: </label>
    <br />
    <div id="optionQues" class="layui-form" hidden>
        <div class="layui-form-item">
            <div class="layui-input-block" id="optionArea">

            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-input-block">
                <button class="layui-btn" lay-filter="prev" lay-submit>Prev</button>
                <button class="layui-btn" lay-filter="optNext" lay-submit>Next</button>
            </div>
        </div>
    </div>

    <div id="textQues" class="layui-form" hidden>
        <div class="layui-form-item">
            <div class="layui-input-block">
                <textarea id="answerArea" name="answer" placeholder="Input..." class="layui-textarea"></textarea>
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-input-block">
                <button class="layui-btn" lay-filter="prev" lay-submit>Prev</button>
                <button class="layui-btn" lay-filter="textNext" lay-submit>Next</button>
            </div>
        </div>
    </div>
</div>