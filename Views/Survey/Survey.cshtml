<link rel="stylesheet" href="~/css/survey.css" />
<script src="~/js/survey.js"></script>
<div hidden>
    <input type="radio" id="optAnswer" name="answer" value="" title="">
    <input id="surveyID" value="@(ViewBag.surveyID)" hidden>
</div>

<div>
    <div id="intro">
        <div id="titleBlock">
            @ViewBag.Title
        </div>
        <div id="contextBlock">
            <p>@ViewBag.Intro</p>
        </div>
        <div id="picBlock">
            <img src="@(Viewbag.PicPath)" />
        </div>
        <button class="layui-btn" id="startSurvey">Start</button>
    </div>
    
    <div id="optionQues" class="layui-form" hidden>
        <label class="layui-form-label" id="optQuesTitle" style="width:auto">Question: </label>
        <br />
        <div class="layui-form-item">
            <div class="layui-input-block" id="optionArea">

            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-input-block">
                <button class="layui-btn" lay-filter="optPrev" lay-submit>Prev</button>
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-input-block">
                <button class="layui-btn" lay-filter="optNext" lay-submit>Next</button>
            </div>
        </div>
    </div>

    <div id="textQues" class="layui-form" hidden>
        <div class="layui-form-item">
            <label class="layui-form-label" id="textQuesTitle"></label>
            <div class="layui-input-block">
                <textarea id="answerArea" name="answer" required lay-verify="required" placeholder="Input..." class="layui-textarea"></textarea>
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-input-block">
                <button class="layui-btn" lay-filter="textSubmit" lay-submit>Next</button>
            </div>
        </div>
    </div>
</div>