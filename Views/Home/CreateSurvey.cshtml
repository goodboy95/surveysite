<link rel="stylesheet" href="~/css/createsurvey.css" />
<script src="~/js/createsurvey.js"></script>
<div id="questionBox">    
    <div class="layui-input-block">
        <input type="text" id="surveyName" placeholder="请输入问卷名称" autocomplete="off" class="layui-input">
    </div>
    <div id="q0" class="layui-form" hidden>
        <div class="layui-form-item">
            <label class="layui-form-label" id="title">问题1：</label>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">问题名称：</label>
            <div class="layui-input-block">
                <input type="text" id="quesName" placeholder="请输入问题名称" autocomplete="off" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">答案类型：</label>
            <div class="layui-input-block">
                <select name="answerType" id="answerType" lay-filter="answerType">
                    <option value="">请选择</option>
                    <option value="0">文本</option>
                    <option value="2">单选</option>
                </select>
            </div>
        </div>
        <div class="layui-form-item" id="optionInput" hidden>
            <label class="layui-form-label">选项填写：</label>
            <div class="layui-input-block" id="options">
                <div id="o1">
                    <input type="text" id="optionText" placeholder="请输入" autocomplete="off" class="layui-input">
                    <input type="text" pattern="[0-9]*" id="relatedQues" placeholder="关联题号" autocomplete="off">
                </div>
            </div>
            <button class="layui-btn" onclick="RemoveOption(this)">removeOption</button>
            <button class="layui-btn" onclick="AddOption(this)">addOption</button>
        </div>
    </div>
</div>
<button class="layui-btn" id="addQues">增加问题</button>
<button class="layui-btn" id="removeQues"> 删除问题</button>
<button class="layui-btn" id="submit">储存问卷</button>